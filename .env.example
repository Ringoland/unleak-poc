# Application
NODE_ENV=development
PORT=8000

# PostgreSQL Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=unleak_poc
DB_USER=postgres
DB_PASSWORD=postgres
DB_MAX_CONNECTIONS=10
DB_SSL=false

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Bull Board (Queue Monitoring Dashboard)
BULL_BOARD_USERNAME=admin
BULL_BOARD_PASSWORD=admin

# External Services
SLACK_WEBHOOK_URL=
STRIPE_API_KEY=sk_test_xxx

# Fetcher Configuration
# ZenRows API key for proxy/anti-bot services (optional)
ZENROWS_API_KEY=
# Default fetcher adapter: 'direct' or 'zenrows'
FETCHER_ADAPTER=direct
# Default request timeout in milliseconds
FETCHER_TIMEOUT_MS=30000
# Default number of retry attempts
FETCHER_RETRIES=3

# Reverify Configuration
REVERIFY_TTL_SECONDS=120
REVERIFY_RATE_PER_FINDING_PER_HOUR=5

# Circuit Breaker
BREAKER_OPEN_MINUTES=20
BREAKER_ERROR_RATE_THRESHOLD_PCT=50
BREAKER_ERROR_RATE_WINDOW=10
