{
  "name": "unleak-poc",
  "version": "1.0.0",
  "description": "Backend service for Unleak PoC using TypeScript, Redis, PostgreSQL, and BullMQ",
  "main": "dist/index.js",
  "scripts": {
    "postinstall": "playwright install chromium",
    "setup": "pnpm install && playwright install",
    "dev": "concurrently --names \"API,SCAN,RENDER\" --prefix-colors \"blue,green,yellow\" \"pnpm dev:api\" \"pnpm dev:scan\" \"pnpm dev:render\"",
    "dev:api": "ts-node-dev --respawn --transpile-only src/index.ts",
    "dev:scan": "ts-node-dev --respawn --transpile-only src/scripts/startScanWorker.ts",
    "dev:render": "ts-node-dev --respawn --transpile-only src/scripts/startRenderWorker.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:legacy": "node server.cjs",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:evidence": "ts-node tests/testEvidenceCapture.ts",
    "test:slack": "ts-node tests/testSlackAlerts.ts",
    "worker:scan": "ts-node src/scripts/startScanWorker.ts",
    "worker:render": "ts-node src/scripts/startRenderWorker.ts",
    "worker:all": "concurrently \"pnpm worker:scan\" \"pnpm worker:render\"",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "smoke:win": "powershell -ExecutionPolicy Bypass -File scripts/smoke.ps1",
    "stability": "ts-node src/scripts/runStabilityTest.ts",
    "report:last": "ts-node src/scripts/reportLast.ts",
    "cleanup:retention": "ts-node src/scripts/cleanupRetention.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "keywords": [
    "typescript",
    "backend",
    "redis",
    "postgresql",
    "bullmq",
    "express"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@bull-board/api": "^6.13.1",
    "@bull-board/express": "^6.13.1",
    "@bull-board/ui": "^6.13.1",
    "axios": "^1.12.2",
    "bullmq": "^5.28.3",
    "csv-parse": "^6.1.0",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.6",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "ioredis": "^5.4.2",
    "morgan": "^1.10.1",
    "nanoid": "^5.1.6",
    "pg": "^8.13.1",
    "playwright": "^1.49.1",
    "prom-client": "^15.1.3",
    "stripe": "^19.1.0"
  },
  "devDependencies": {
    "@types/ejs": "^3.1.5",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.7.2",
    "@types/pg": "^8.11.10",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "concurrently": "^9.2.1",
    "drizzle-kit": "^0.31.5",
    "eslint": "^9.37.0",
    "jest": "^30.2.0",
    "prettier": "^3.4.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  }
}
